rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /* ---------- Helper functions ---------- */
    function isSignedIn() {
      return request.auth != null;
    }

    function getUser() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUser().role == "admin";
    }

    function isOperator() {
      return isSignedIn() && getUser().userType == "operator" && getUser().status == "approved";
    }

    function isCitizen() {
      return isSignedIn() && getUser().userType == "citizen";
    }

    /* ---------- USERS COLLECTION ---------- */
    match /users/{userId} {

      // User can read their own profile
      allow read: if isSignedIn() && request.auth.uid == userId;

      // Admin can read all users (needed for admin dashboard queries)
      allow read: if isAdmin();

      // User can create their own profile
      allow create: if isSignedIn() && request.auth.uid == userId;

      // Only admin can update users (approve operators)
      allow update: if isAdmin();

      allow delete: if false;
    }

    /* ---------- REPORTS COLLECTION ---------- */
    match /reports/{reportId} {

      // Citizens can create reports
      allow create: if isCitizen();

      // authenticated users can read all reports
      allow read: if isSignedIn();

      // Operator/Admin can update status. Citizens can vote (which updates the doc).
      // We allow citizens to update, but ensure they can't change the status 
      // (status must remain same as before for citizens)
      allow update: if isOperator() || isAdmin() || (isCitizen() && request.resource.data.status == resource.data.status);

      allow delete: if false;
    }
  }
}