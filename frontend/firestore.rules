rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;

      // allow clients to update only a safe subset of fields on their profile
      allow update: if request.auth != null && request.auth.uid == userId &&
        request.resource.data.keys().hasOnly(["displayName","phone","photoURL","bio"]);

      // allow admins to modify role/status fields
      // DEV: allow a single hardcoded UID to update role/status during development
      allow update: if request.auth != null && (
        request.auth.token.admin == true || request.auth.uid == "REPLACE_WITH_ADMIN_UID"
      );

      // allow reads for authenticated users (admins can list all users)
      allow get: if request.auth != null;
      allow list: if request.auth != null && request.auth.token.admin == true;
    }

    // fallback deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}